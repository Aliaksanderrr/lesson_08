<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lesson_08" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppButtons" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">@dimen/view_layout_margin</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyAppTextView" parent="Base.Widget.AppCompat.TextView">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">@dimen/view_layout_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_bottom</item>
    </style>
</resources>